---
import { useTranslations } from '../../i18n/utils'
import type { SanityEvent } from '../../utils/sanity'
import Button from '../ui/Button.astro'

interface Props {
  lang: 'id' | 'en'
  event: SanityEvent
}

const { event, lang } = Astro.props
const t = useTranslations(lang)

const eventTypeLabelStyles = {
  Meetup: 'bg-green-100 text-green-600',
  Workshop: 'bg-blue-100 text-blue-600',
  WFC: 'bg-orange-100 text-orange-600',
  Webinar: 'bg-pink-100 text-pink-600',
  Hackathon: 'bg-yellow-100 text-yellow-600',
  Other: 'bg-purple-100 text-purple-600',
}
---

<div
  class='event-card group bg-white p-2 md:p-4 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-all duration-300 flex flex-col md:flex-row gap-6 items-start md:items-center'
  data-type={event.type}
  data-status={event.status}
  data-title={event.title.toLowerCase()}
>
  <div
    class='md:w-1/4 flex flex-col items-center md:items-start text-center md:text-left'
  >
    {
      event.image?.asset?.url && (
        <div class='w-full h-48 md:h-72 rounded-lg overflow-hidden mt-2 relative'>
          <img
            src={event.image.asset.url}
            alt={event.title}
            class='w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500'
            loading='lazy'
          />
        </div>
      )
    }
  </div>

  <div class='flex-1'>
    <div class='flex items-center gap-3 mb-2'>
      <span
        class:list={[
          'text-xs font-bold px-3 py-1 rounded-full',
          eventTypeLabelStyles[event.type] || '',
        ]}
      >
        {event.type}
      </span>
      <span class='text-xs text-gray-500 flex items-center gap-1'>
        <svg
          class='w-3 h-3'
          fill='none'
          viewBox='0 0 24 24'
          stroke='currentColor'
          ><path
            stroke-linecap='round'
            stroke-linejoin='round'
            stroke-width='2'
            d='M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z'
          ></path><path
            stroke-linecap='round'
            stroke-linejoin='round'
            stroke-width='2'
            d='M15 11a3 3 0 11-6 0 3 3 0 016 0z'></path></svg
        >
        {event.locationName}
      </span>
    </div>
    <h3 class='text-xl font-bold mb-2 text-primary'>
      {event.title}
    </h3>
    <p class='text-gray-500 mb-1'>
      {
        new Date(event.date).toLocaleDateString('id-ID', {
          day: '2-digit',
          month: 'long',
          year: 'numeric',
        })
      }
    </p>
    <p class='text-gray-500 text-sm mb-3'>{event.time}</p>
    <p class='text-gray-600 text-sm'>{event.description}</p>
  </div>

  <div class='w-full md:w-auto mt-4 md:mt-0'>
    {
      event.status !== 'no_registration_required' &&
      (event.status === 'closed' || event.date < new Date().toISOString()) ? (
        <div class='inline-flex w-full justify-center items-center px-4 py-2 rounded-full border border-gray-200 text-gray-400 font-medium text-sm'>
          {t('event.completed')}
        </div>
      ) : (
        <Button
          size='sm'
          disabled={event.status !== 'open'}
          class='w-full md:w-auto'
        >
          {event.status === 'open' ? t('event.register') : t('event.soon')}
        </Button>
      )
    }
  </div>
</div>
