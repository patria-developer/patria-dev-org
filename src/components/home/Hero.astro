---
import { siteConfig } from '../../data/site'
import { getLangFromUrl, useTranslations } from '../../i18n/utils'
import { getHero } from '../../utils/sanity'
import Button from '../ui/Button.astro'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
const hero = await getHero(lang)
console.log(hero)
---

<section
  id='hero'
  class='relative pt-12 pb-20 lg:pt-24 lg:pb-32 overflow-hidden'
>
  <div
    class='absolute inset-0 -z-10 bg-[radial-gradient(ellipse_at_top_right,var(--tw-gradient-stops))] from-primary/10 via-background to-background'
  >
  </div>

  <div class='container mx-auto px-4 grid lg:grid-cols-2 gap-12 items-center'>
    <div class='hero-content space-y-8'>
      <div
        class='inline-flex items-center gap-2 px-4 py-2 rounded-full bg-accent-joy/20 text-yellow-700 font-medium text-sm border border-accent-joy/30'
      >
        <span class='w-2 h-2 rounded-full bg-yellow-500 animate-pulse'></span>
        {t('hero.badge')}
      </div>

      <h1
        class='text-4xl lg:text-6xl font-headings font-bold text-secondary-trust leading-tight'
      >
        {hero.title1}
        <br />
        <span
          class='text-transparent bg-clip-text bg-linear-to-r from-primary to-primary-light'
          >{hero.title2}</span
        >
      </h1>

      <p class='text-lg text-gray-600 max-w-xl leading-relaxed'>
        {hero.description}
      </p>

      <div class='flex flex-wrap gap-4 pt-4'>
        <Button href='/contact' size='lg'>{hero.buttonTextJoin}</Button>    
        <Button href='/event' variant='outline' size='lg'
          >{t('hero.cta.event')}</Button
        >
      </div>

      <div class='flex items-center gap-4 pt-4 text-sm text-gray-500'>
        <div class='flex -space-x-3'>
          {
            [1, 2, 3, 4].map((i) => (
              <div class='w-10 h-10 rounded-full border-2 border-white bg-gray-200 flex items-center justify-center overflow-hidden'>
                <img
                  src={`https://api.dicebear.com/7.x/avataaars/svg?seed=${i}`}
                  alt='Member'
                />
              </div>
            ))
          }
          <div
            class='w-10 h-10 rounded-full border-2 border-white bg-gray-100 flex items-center justify-center text-xs font-bold text-gray-600'
          >
            +{parseInt(siteConfig.profile.memberCount) - 4}
          </div>
        </div>
        <p>
          {t('hero.member.join')}
          {siteConfig.profile.memberCount}
          {t('hero.member.talent')}
        </p>
      </div>
    </div>

    <div class='hero-image relative hidden lg:block'>
      <div
        class='absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] h-[120%] bg-linear-to-tr from-primary/20 to-accent-joy/20 rounded-full blur-3xl -z-10'
      >
      </div>
      <img
        src='https://images.unsplash.com/photo-1522071820081-009f0129c71c?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'
        alt='Collaboration'
        class='rounded-2xl shadow-2xl rotate-3 hover:rotate-0 transition-all duration-500 border-4 border-white'
      />

      <!-- Floating Card -->
      <div
        class='absolute -bottom-10 -left-10 bg-white p-6 rounded-xl shadow-xl border border-gray-100 animate-float'
      >
        <div class='flex items-center gap-4'>
          <div
            class='w-12 h-12 bg-green-100 rounded-full flex items-center justify-center text-green-600'
          >
            <svg
              xmlns='http://www.w3.org/2000/svg'
              fill='none'
              viewBox='0 0 24 24'
              stroke-width='1.5'
              stroke='currentColor'
              class='w-6 h-6'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                d='M9 12.75L11.25 15 15 9.75M21 12c0 4.97-4.03 9-9 9s-9-4.03-9-9 4.03-9 9-9 9 4.03 9 9z'
              ></path>
            </svg>
          </div>
          <div class='ml-4'>
            <p class='font-bold text-gray-900'>{hero.floatCardTitle}</p>
            <p class='text-sm text-gray-500'>{hero.floatCardDescription}</p>
          </div>
        </div>
      </div>
    </div>  
  </div>
</section>
