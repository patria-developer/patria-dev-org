---
import Section from '../ui/Section.astro';
import { getMissions } from '../../utils/sanity';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const missionItems = await getMissions(lang);
---

<Section id="mission" bg="surface" class="py-24 relative">
  <div class="text-center max-w-3xl mx-auto mb-16 mission-header">
    <h2 class="text-3xl lg:text-4xl font-headings font-bold text-secondary-trust mb-6">{t('mission.title')}</h2>
    <p class="text-gray-600 text-lg">
      {t('mission.desc')}
    </p>
  </div>
  
  <div class="grid md:grid-cols-3 gap-8">
    {missionItems.map(item => (
      <div class={`p-8 rounded-3xl ${item.color} relative overflow-hidden group hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1`}>
        <div class={`absolute top-0 right-0 w-32 h-32 bg-gradient-to-br ${item.gradient} opacity-10 rounded-bl-full group-hover:scale-110 transition-transform duration-500`}></div>
        
        <div class="relative z-10">
          <div class={`w-14 h-14 rounded-2xl bg-white/80 backdrop-blur mb-6 flex items-center justify-center shadow-sm`}>
            {item.icon?.asset?.url && <img src={item.icon.asset.url} alt={item.title} class="w-8 h-8" />}
          </div>
          
          <h3 class="text-xl font-bold mb-3 font-headings">
            {item.title}
          </h3>
          <p class="opacity-90 leading-relaxed">
            {item.desc}
          </p>
        </div>
      </div>
    ))}
  </div>
</Section>
