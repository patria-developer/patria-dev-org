---
import "../styles/global.css";
import "@fontsource/plus-jakarta-sans";
import "@fontsource/inter";
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { siteConfig } from '../data/site';

interface Props {
	title?: string;
}

const { title = siteConfig.title } = Astro.props;
---

<!doctype html>
<html lang="id" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    <script is:inline>
      // Check localStorage for language preference
      if (typeof window !== 'undefined') {
        const storedLang = localStorage.getItem('language');
        const currentPath = window.location.pathname;
        
        if (storedLang === 'en' && !currentPath.startsWith('/en')) {
           window.location.href = `/en${currentPath === '/' ? '' : currentPath}`;
        } else if (storedLang === 'id' && currentPath.startsWith('/en')) {
           window.location.href = currentPath.replace(/^\/en/, '') || '/';
        }
      }
    </script>
	</head>
	<body class="bg-background text-text-main font-body antialiased selection:bg-primary selection:text-white overflow-x-hidden">
		<Navbar />

		<main class="pt-16 min-h-screen">
			<slot />
		</main>

		<Footer />
	</body>
</html>
